@model IEnumerable<Model.Weed>

@{
    ViewBag.Title = "Index";
}

<h2>Shopping Cart: </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeedStrength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceForOunce)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeedStrength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceForOunce)
        </td>
        <td>
            @Html.ActionLink("Remove from Cart", "Remove", new { id = item.WeedId })
        </td>
    </tr>
}

</table>


@Html.ActionLink("Checkout", "Checkout")
